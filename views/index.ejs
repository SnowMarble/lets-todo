<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script src="https://cdn.jsdelivr.net/npm/event-source-polyfill@1.0.31/src/eventsource.min.js"></script>
  <script defer src="/public/index.js"></script>
</head>
<body class="flex h-screen justify-center items-center">
  <a href="/me" class="absolute right-5 top-5 p-2"><img src="/public/img/paw.svg" alt="paw" class="w-5"></a>
  <div class="flex relative flex-col w-2/5 shadow-lg h-fit p-5 rounded-lg text-slate-700">

    <div class="flex w-full h-fit mb-4 justify-between justify-center items-center">
      <div class="flex flex-row items-center h-fit">
        <p id="date" class="text-3xl mr-1 font-normal"></p>
        <div class="flex flex-col text-xs font-light">
          <p id="month"></p>
          <p id="year">2023</p>
        </div>
      </div>
      <p id="day"></p>
    </div>

    <div id="board" class="flex flex-col mb-5 gap-2 transition"></div>

    <button id="add" class="rounded-full w-10 h-10 bg-green-400 absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 cursor-pointer flex items-center justify-center text-slate-100 text-xl">+</button>
  </div>
</body>
</html>
