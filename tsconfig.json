{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2023", "DOM"],
    "module": "CommonJS",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./src/types"],
    "types": ["reflect-metadata"],
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true,
  }
}
